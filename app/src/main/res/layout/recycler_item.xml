<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#171717"
    android:orientation="vertical"
    android:id="@+id/contactlayout">

    <androidx.cardview.widget.CardView
        android:id="@+id/contactItemView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#171717"
        android:padding="10dp"
        app:cardElevation="0dp"


        >

        <ImageView
            android:id="@+id/contactimg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/contactimg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            >

            <TextView
                android:id="@+id/contactname"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="20sp"



                />
            <ImageView
                android:id="@+id/delete"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_baseline_delete_24"
                android:layout_marginTop="5dp"
                android:onClick="deletecontact"

                />


        </LinearLayout>


        <TextView
            android:id="@+id/expandablecontactno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="40dp"
            android:text=""
            android:visibility="gone"
            android:textColor="@color/design_default_color_secondary"
            android:textSize="11sp" />

        <LinearLayout
            android:id="@+id/expandablebuttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="60dp">

            <ImageView
                android:id="@+id/phone"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_baseline_phone_24"
                />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/ic_baseline_message_24"
                android:id="@+id/sms"/>

            <ImageView
                android:id="@+id/editbtn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/ic_baseline_edit_24"
                android:onClick="onEditBtnClick"/>

            <ImageView
                android:id="@+id/info"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_baseline_info_24" />




        </LinearLayout>

        <View
            android:id="@+id/hr"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="20dp"
            android:background="#5a5a5a" />
        <TextView
            android:id="@+id/positiontxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>


    </androidx.cardview.widget.CardView>


</LinearLayout>